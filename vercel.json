{
  "version": 2,
  "buildCommand": "npm run build:frontend",
  "installCommand": "npm install && cd Backend && npm install && cd ../Frontend && npm install",
  "outputDirectory": "Frontend/dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "Backend/*.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "Backend/server.js"
    },
    {
      "source": "/((?!api|_vercel).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}