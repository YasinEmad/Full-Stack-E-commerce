{
  "version": 2,
  "builds": [
    {
      "src": "Backend/server.js",
      "use": "@vercel/node",
      "config": { 
        "nodeVersion": "20.x",
        "maxDuration": 60,
        "memory": 1024
      }
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "Frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/dist/$1",
      "check": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "Frontend/dist/index.html"
    }
  ]
}